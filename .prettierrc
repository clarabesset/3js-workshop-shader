{
  "printWidth": 100,
  "semi": true,
  "singleQuote": true,
  "overrides": [
    {
      "files": "*.js",
      "options": {
        "arrowParens": "avoid",
        "trailingComma": "es5"
      }
    },
    {
      "files": "*.jsx",
      "options": {
        "arrowParens": "avoid",
        "trailingComma": "es5"
      }
    },
    {
      "files": "*.css",
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": "*.html",
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": "*.yml",
      "options": {
        "singleQuote": false
      }
    }
  ]
}
